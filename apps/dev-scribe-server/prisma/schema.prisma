datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Email {
  contentHtml     String?
  contentMarkdown String?
  createdAt       DateTime @default(now())
  id              String   @id @default(cuid())
  subject         String?
  updatedAt       DateTime @updatedAt
  user            User?    @relation(fields: [user], references: [id])
  user            String?  @unique
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  emails    Email?
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}
